<%- include('../../partials/header.ejs')%>
<%- include('../../partials/homenavbar.ejs')%>

<body>
    <div class="container">
       
        <% result.articles.rows.forEach(article =>{ %>
            <br>
            <div class="card">
                <div class="card-header">
                    <h4><%- article.title%></h4>
                </div>
                <div class="card-body">
                    <a class="btn btn-success" href="/<%= article.slug%>">Ler Artigo</a>
                </div>
            </div>
        <% }) %>


        <div class="row">
            <div class="col col-12">
                <%if(result.page > 2){%>
                    <a style="float:left" href="/articles/page/<%=result.page - 1%>"> <<< PREV</a><!--style="float:LEFT" alina a esquerda-->    
                <% }else if(result.page == 2){%>
                    <a style="float:left" href="/"> <<< PREV</a>
                <%}%>    

                <% if(result.next){%>
                    <a style="float:right" href="/articles/page/<%=result.page + 1%>">NEXT>>></a><!--style="float:right" alina a direita-->
                <%}%>
            </div>
        </div>


    </div>
</body>

<%- include('../../partials/footer.ejs')%>
